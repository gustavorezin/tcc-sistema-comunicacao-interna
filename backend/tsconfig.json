{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
